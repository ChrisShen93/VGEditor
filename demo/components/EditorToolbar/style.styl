.toolbar {
  display flex
  align-items center
  height 27px

  .command i {
    display inline-block
    width 27px
    height 27px
    margin 0 6px
    padding-top 10px
    text-align center
    border 1px solid #fff
    cursor pointer

    &:hover {
      border 1px solid #e6e9ed
    }
  }

  .disable i {
    color rgba(0, 0, 0, 0.25)
    cursor auto

    &:hover {
      border 1px solid #fff
    }
  }
}
